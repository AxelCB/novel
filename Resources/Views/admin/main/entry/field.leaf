<div class="form-group">
  <label for="#(field.handle)">#(field.name)</label>
  #equal(field.kind, "0") {
    <input type="text" class="form-control" id="fields[#(field.handle)]" name="fields[#(field.handle)]" value="">
  } ##else() {
    <textarea class="form-control" id="fields[#(field.handle)]" name="fields[#(field.handle)]" value="" rows="2" cols="50"></textarea>
  }
</div>
