<div class="form-group">
  <label for="#(field.handle)">#(field.name)</label>
  #equal(field.kind, "0") {
    <input type="text" class="form-control" id="field_#(field.handle)" name="fields[]" value="">
  } ##else() {
    <textarea class="form-control" id="field_#(field.handle)" name="fields[]" value="" rows="2" cols="50"></textarea>
  }
</div>
